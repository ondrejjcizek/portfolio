*,
*:before,
*:after
    box-sizing border-box
    background-repeat no-repeat

html
    font-size 62.5%
    height: auto;

body
    font-family "Stabil Grotesk Trial", sans-serif
    background #111112
    color white
    font-size 1.5rem

    &::-webkit-scrollbar
        display none

html.lenis {
  height: auto;
}

.lenis.lenis-smooth {
  scroll-behavior: auto;
}

.lenis.lenis-smooth [data-lenis-prevent] {
  overscroll-behavior: contain;
}

.lenis.lenis-stopped {
  overflow: hidden;
}

.lenis.lenis-scrolling iframe {
  pointer-events: none;
}